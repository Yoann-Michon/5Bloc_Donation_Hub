# Environment variables
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/donation_hub?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Ethereum RPC (Sepolia Testnet)
# Get your key from https://www.infura.io/ or https://www.alchemy.com/
ETHEREUM_RPC_URL="https://sepolia.infura.io/v3/YOUR_INFURA_KEY_HERE"
ETHEREUM_CHAIN_ID=11155111

# Smart Contract (will be filled after deployment)
CONTRACT_ADDRESS=""

# IPFS - Pinata
# Get your keys from https://www.pinata.cloud/
PINATA_API_KEY="YOUR_PINATA_API_KEY_HERE"
PINATA_SECRET_KEY="YOUR_PINATA_SECRET_KEY_HERE"

# API Configuration
API_PREFIX="api/v1"
CORS_ORIGIN="http://localhost:5173"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
